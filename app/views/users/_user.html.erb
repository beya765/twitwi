<!-- indexの各ユーザーを表示するパーシャル -->

<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "(このユーザーを削除する)", user, method: :delete,
                                  data: { confirm: "削除してよろしいですか？" } %>
  <% end %>
</li>